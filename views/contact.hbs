<h2>Contact me</h2>

{{#if isSent}}
  <div class='isSent'>The message has been sent!<br />File
    {{fileName}}
    has been saved
  </div>
{{/if}}
{{#if isError}}
  <div class='isError'>Wystąpił błąd</div>
{{/if}}
{{#if filePath}}
  <img width='150px' src='{{filePath}}' alt='' />
{{/if}}

<form action='/contact/send-message' method='POST' enctype='multipart/form-data'>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    File:
    <input type='file' name='fileName' accept='.png, .jpg, .jpeg, .gif' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <button type='submit'>Send message</button>
</form>